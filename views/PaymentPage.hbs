<style>
  .BUTTON {
    font-size: 15;
    border: 1px solid rgba(13, 9, 0, 0.491);
    border-radius: 25px;
    cursor: pointer;
  }

  .BUTTON:hover {
    background-color: #f44336;
    color: white;
  }

  .popup {
    width: 400px;
    background: rgb(244, 216, 216);
    border-radius: 15spx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.1);
    text-align: center;
    padding: 0 20px 30px;
    color: #333;
    visibility: hidden;
    transition: transform 0.4s, top 0.4s;

  }

  .openpopup {
    visibility: visible;
    top: 50%;
    transform: translate(-50%, -50%) scale(1);
  }

  .popup img {
    width: 100px;
    margin-top: -50px;
    border-radius: 50%;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);

  }

  .popup h1 {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 30px;
    font-weight: bold;
    margin: 25px 0 10px;
  }

  .popup h4 {
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-size: 18px;
    margin: 22px 0 10px;
    color: blue
  }

  .popup button {
    width: 95%;
    margin-top: 20px;
    padding: 10px 0;
    color: plum;
    border: 0;
    outline: none;
    font-size: 20px;
    border-radius: 5px;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    ;
  }
</style>

