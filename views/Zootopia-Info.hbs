  .card__head {
    display: flex;
    align-items: center;
    color: white;
    margin-bottom: 15px;
  }

  .card__head img {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    margin-right: 10px;
    border: 2px solid rgb(246, 107, 107);
  }

  .name {
    font-weight: 600;
    font-size: 18px;
  }

  .card__heading {
    color: white;
    font-size: 18px;
  }

  .card__rating {
    color: yellow;
    padding-left: 400px;
    font-size: larger;
  }

  .card__rating .notchecked {
    color: rgb(255, 255, 255);
  }

  .card__detail {
    color: hsla(0, 0%, 81%, 0.852);
    line-height: 1.3;
    font-size: 18px;
    padding-bottom: 10px;
    text-align: justify;
    width: 670px;
