<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Seat Booking</title>
    <link rel="stylesheet" href="/css/bookingstyle.css">
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/3172/3172555.png" type="image/x-icon">
</head>

<body>
    <div class="background">
    <div class="movie-container">
        <center>
            <label>Pick a movie:</label>
            <select id="movie">
                <option value="150">Luca</option>
                <option value="150">How To Train Your Dragon</option>
                <option value="150">Toy Story</option>
                <option value="150">The Croods</option>
            </select>
        </center>
    </div>

    <ul class="showcase" style="display: flex; flex-direction: column;">
        <li>
            <div class="seat"></div>
            <small>N/A</small>

            <div class="seat selected"></div>
            <small>Selected</small>

            <div class="seat occupied"></div>
            <small>Occupied</small>
        </li>
    </ul>

    <div class="container">
        <div class="movie-screen">
            <img src='https://www.nicepng.com/png/full/12-123267_cinematic-black-bars-png-monochrome.png' 
            width="490px" height="125px" style="margin-top: -43px; margin-bottom: -30px"
                alt='screen' />
        </div>

        <div class="row-container">
            <div class="row">
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat occupied"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
            </div>
            <div class="row">
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat occupied"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
            </div>
            <div class="row">
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat occupied"></div>
            </div>
            <div class="row">
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
            </div>
            <div class="row">
                <div class="seat occupied"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat occupied"></div>
                <div class="seat occupied"></div>
            </div>
            <h4 class='subtitle'>GOLD - ₹150</h4>
            <div class="row">
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat occupied"></div>
            </div>
            <div class="row">
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat occupied"></div>
                <div class="seat occupied"></div>
                <div class="seat"></div>
                <div class="seat"></div>
                <div class="seat"></div>
            </div>
            <h4 class='subtitle'>DIAMOND - ₹150</h4>

            <div class="text-wrapper">
                <p class="text">Selected Seats : <span id='count'>0</span>
                <p class="text">Total Price : ₹<span id="total">0</span></p>
            </div>
        </div>

    </div>
    <a href="/PaymentPage">
        <button class="btn">Confirm Seats</button>
        </div>
        <script src="/js/bookingscript.js"></script>
    </div>
</body>

</html>